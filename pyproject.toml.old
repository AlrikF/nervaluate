[build-system]
requires = ["setuptools>=61.0"]
build-backend = "setuptools.build_meta"

[tool.poetry]
name = "nervaluate"
version = "0.1.9"
authors = [
    { name="David S. Batista", email="dsbatista@gmail.com" },
    { name="Matthew Upson", email="matthew.a.upson@gmail.com" }
]
description = "NER evaluation considering partial match scoring"
readme = "README.md"
requires-python = ">=3.8"
classifiers=[
    "Programming Language :: Python :: 3",
    "Operating System :: OS Independent"
]

[project.urls]
"Homepage" = "https://github.com/MantisAI/nervaluate"
"Bug Tracker" = "https://github.com/MantisAI/nervaluate/issues"